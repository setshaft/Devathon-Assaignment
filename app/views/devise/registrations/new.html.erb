<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<form class="form-horizontal">
    <div class="col-sm-6 col-md-4 col-sm-offset-3 col-md-offset-4">
    
    <div class = 'well bs-component'>
  <fieldset>
    <legend>Welcome Guest Please SIGN UP</legend>
    <div class="form-group">
      <label for="inputEmail" class="col-lg-2 control-label">Email</label>
      <div class="col-lg-10">
        <%= f.email_field :email, autofocus: true ,:class =>'form-control1'%><br>
      </div>
    </div>
    <div class="form-group">
      <label for="inputPassword" class="col-lg-2 control-label">Password</label>
      <div class="col-lg-10">
        <%= f.password_field :password ,autocomplete: "off", :class =>'form-control1' %><br>
      </div>
    </div>
    <div class="form-group">
      <label for="inputPassword" class="col-lg-2 control-label">Password</label>
      <div class="col-lg-10">
        <%= f.password_field :password_confirmation, autocomplete: "off" ,:class =>'form-control1'%><br>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <button type="submit" class="btn btn-primary">Sign UP</button>
      </div>
    </div>
    <%= render "devise/shared/links" %>
  </fieldset>
      </div>
          </div>
</form>
<% end %>